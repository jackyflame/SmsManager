<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_12">

        <TextView
            android:id="@+id/txv_recive_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_12"
            tools:text="通知时间：2018-11-23 12:23"/>

        <TextView
            android:id="@+id/txv_smscontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:lineSpacingMultiplier="1.2"
            android:textSize="@dimen/text_12"
            android:textColor="@color/black"
            tools:text="短信内容"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txv_take_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_12"
                tools:text="取件时间：2018-11-23 12:23"/>

            <TextView
                android:id="@+id/btn_take"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:textSize="@dimen/text_12"
                android:text="取件"
                android:textColor="@color/btn_take_text_selector"
                android:background="@drawable/btn_take_selector"/>

            <TextView
                android:id="@+id/btn_return_back"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_l"
                android:gravity="center"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:textSize="@dimen/text_12"
                android:text="退回"
                android:textColor="@color/btn_take_text_selector"
                android:background="@drawable/btn_take_selector"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txv_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:lineSpacingMultiplier="1.2"
            android:textSize="@dimen/text_12"
            tools:text="备注"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/diver_size"
        android:background="@color/diver_dark"/>

</LinearLayout>